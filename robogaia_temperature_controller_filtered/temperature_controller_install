#!/bin/sh

cp 99-input.rules /etc/udev/rules.d
cp temp_relay_on /usr/bin/
cp temp_relay_off /usr/bin/
cp temperature_controller_init /usr/bin/
cp read_temperature_fahrenheit /usr/bin/
cp read_temperature_fahrenheit /usr/bin/
cp read_temperature_celsius /usr/bin/
cp temperature_hold  /usr/bin/

chmod 777  /usr/bin/temp_relay_on
chmod 777  /usr/bin/temp_relay_off
chmod 777  /usr/bin/temperature_controller_init
chmod 777  /usr/bin/read_temperature_fahrenheit
chmod 777  /usr/bin/read_temperature_celsius
chmod 777  /usr/bin/temperature_hold